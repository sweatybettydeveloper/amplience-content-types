{
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
  "id": "https://github.com/sweatybettydeveloper/amplience-content-types/blob/master/mainCTA.json",
  "title": "Site CTA",
  "description": "",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "ctaText": {
      "type": "string",
      "minLength": 0,
      "maxLength": 33,
      "format":"text",
      "title": "CTA Text",
      "description": ""
    },
    "ctaLink": {
      "type": "string",
      "minLength": 0,
      "maxLength": 100,
      "format":"text",
      "title": "CTA Link",
      "description": "$url('Search-Show', 'cgid', 'jackets')$"
    },
    "ctaColor": {
      "type": "string",
      "title": "CTA Color",
      "description": "Pick an option for the CTA color",
      "enum": [
        "BlackToClear",
        "ClearToBlack",
        "FluroToClear"
      ]
    }
  },
  "propertyOrder": ["ctaText", "ctaLink", "ctaColor"]
}
